<% form_for @dad, :html => {:multipart => true} do |f| %>
  <p>
    <%= f.label :name, "Your Dad's name:" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description, "What does he do:" %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :photo, "Add a photo?" %><br />
    <%= f.file_field :photo %>
  </p>
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>

<%= link_to "Back", root_path %>
