<h1>WHO IS YOUR DADDY AND WHAT DOES HE DO?</h1>

<% if @dads.blank? %>
  <h2>No Dads added yet : [</h2>
<% else %>
  <% @dads.each do |dad| %>
    <div>
      <p>
        <%= link_to image_tag(dad.photo.url), dad_path(dad) %>
      </p>
      <p>
        <h2><%= dad.name %></h2>
      </p>
      <p>
        <%= dad.description %>
      </p>
      <p>
        <%= twitter_share(dad_url(dad))%>
      </p>
      <p>
        <%= facebook_share(dad_url(dad))%>
      </p>
    </div>
  <% end %>
<% end %>

<%= link_to "Add my Dad", new_dad_path %>

<%= will_paginate @dads %>
