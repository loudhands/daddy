.dads
  .header-group
    %h2
      The Dad's
    = link_to "+ Add my Dad", new_dad_path, :class=>"btn add"
  - if @dads.blank?
    %h2
      No Dads added yet : [
  - else
    - @dads.each do |dad|
      .dad
        .photo
          - if !dad.photo || dad.photo.size.blank?
            =# TODO: add a missing.png file
            = link_to image_tag("rails.png"), dad_path(dad)
          - else
            = link_to image_tag(dad.photo.url), dad_path(dad)
        .info
          %h1
            = link_to dad.name, dad_path(dad)
          %p
            = dad.description
          .share
            %p
              = twitter_share(dad_url(dad))
              = facebook_share(dad_url(dad))
        .clearfix

= will_paginate @dads
