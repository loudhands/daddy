.dads
  - if @dads.blank?
    %h2
      No Dads added yet : [
  - else
    - @dads.each do |dad|
      .dad
        .photo
          - if !dad.photo || dad.photo.size.blank?
            = link_to image_tag("default.jpg")
          - else
            = link_to image_tag(dad.photo.url(:thumb))
        %a{:href=>"#{dad_path(dad)}"}
          .info
            %h2
              =h dad.name
            %p
              =h dad.description
  .clearfix
.paginate
  = will_paginate @dads
  
%embed{:src=>"whois.mp3", :height=>"0", :width=>"0"}
  
